@model IEnumerable<Room_Booking.Models.Room>


<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Search for available rooms</h2>
        </div>
        @*<div class="col-6 text-right">
            <a asp-controller="Room" asp-action="Search" class="btn btn-primary">Search for a room</a>
        </div>*@
    </div>
    <br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thread>
                <tr>
                    <th>
                        Number of Beds
                    </th>
                    <th>
                        Room Size
                    </th>
                    <th>
                        Room Quality
                    </th>
                    <th>
                        Room Id
                    </th>
                    <th>
                        Available
                    </th>
                </tr>
            </thread>
            <tbody>
                @foreach (var room in Model)
                {
                <tr>
                    @*<td width="30%"></td>*@
                    <td width="30%">@room.NumberOfBeds</td>
                    <td width="30%">@room.RoomSize</td>
                    <td width="30%">@room.RoomQuality</td>
                    <td width="30%">@room.Id</td>
                    @*<td width="30%">@room.Available</td>*@
                    <td width="40%">
                        <div class="col-6 text-left">
                            <a asp-controller="Room" asp-action="Reserve" asp-route-Id="@room.Id" class="btn btn-primary mx-1">Reserve this room</a>
                        </div>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No rooms available yet</p>
    }
    <div class="col-6 text-right">
        <a asp-action="Search" class="btn btn-danger w-75">Back</a>
    </div>

</div>

